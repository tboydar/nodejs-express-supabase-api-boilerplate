<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || __('site.title') %></title>
    
    <!-- Meta Tags -->
    <meta name="description" content="<%= description || __('site.description') %>">
    <meta name="keywords" content="ecommerce, online store, shopping">
    <meta name="author" content="E-commerce Demo">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="<%= title || __('site.title') %>">
    <meta property="og:description" content="<%= description || __('site.description') %>">
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= canonicalUrl %>">
    <meta property="og:locale" content="<%= locale %>">
    
    <!-- Language Alternates -->
    <% if (alternateLinks) { %>
        <% alternateLinks.forEach(link => { %>
            <link rel="alternate" hreflang="<%= link.hreflang %>" href="<%= link.href %>">
        <% }) %>
    <% } %>
    
    <!-- Canonical URL -->
    <link rel="canonical" href="<%= canonicalUrl %>">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Additional Head Content -->
    <% if (typeof headContent !== 'undefined') { %>
        <%- headContent %>
    <% } %>
</head>
<body>
    <!-- Header Navigation -->
    <%- include('../partials/header') %>
    
    <!-- Language Switcher -->
    <%- include('../partials/language-switcher') %>
    
    <!-- Main Content -->
    <main class="main-content">
        <!-- Alert Messages -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <!-- Page Content -->
        <%- body %>
    </main>
    
    <!-- Footer -->
    <%- include('../partials/footer') %>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script src="/js/app.js"></script>
    
    <!-- Additional Scripts -->
    <% if (typeof scripts !== 'undefined') { %>
        <%- scripts %>
    <% } %>
    
    <!-- Language and API Configuration -->
    <script>
        window.APP_CONFIG = {
            language: '<%= locale %>',
            apiBaseUrl: '/api/v1',
            supportedLanguages: <%- JSON.stringify(supportedLanguages) %>
        };
    </script>
</body>
</html>