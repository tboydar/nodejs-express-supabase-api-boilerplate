                <h6 class="fw-bold mb-3"><%= __('language.switch') %></h6>
                <div class="d-flex flex-column gap-2">
                    <% supportedLanguages.forEach(lang => { %>
                        <% 
                            const isActive = lang.code === locale;
                            const currentPath = req.path.replace(/^\/[a-z]{2}(-[A-Z]{2})?/, '') || '/';
                            const langUrl = getLocalizedUrl(currentPath, lang.code);
                        %>
                        <a href="<%= langUrl %>" 
                           class="text-light-emphasis text-decoration-none d-flex align-items-center <%= isActive ? 'fw-bold' : '' %>">
