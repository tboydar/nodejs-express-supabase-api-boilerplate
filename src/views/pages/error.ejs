<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 text-center">
            <!-- Error Icon -->
            <div class="error-icon mb-4">
                <% if (error && error.status === 404) { %>
                    <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
                <% } else { %>
                    <i class="bi bi-x-circle display-1 text-danger"></i>
                <% } %>
            </div>
            
            <!-- Error Code -->
            <% if (error && error.status) { %>
                <h1 class="display-2 fw-bold text-muted mb-3">
                    <%= error.status %>
                </h1>
            <% } %>
            
            <!-- Error Message -->
            <h2 class="h3 mb-3">
                <%= message || __('errors.500') %>
            </h2>
            
            <!-- Error Description -->
            <% if (error && error.status === 404) { %>
                <p class="text-muted mb-4">
                    The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
                </p>
            <% } else { %>
                <p class="text-muted mb-4">
                    We're sorry, something went wrong on our end. Please try again later.
                </p>
            <% } %>
            
            <!-- Action Buttons -->
            <div class="d-flex gap-3 justify-content-center">
                <a href="<%= getLocalizedUrl('/') %>" class="btn btn-primary">
                    <i class="bi bi-house"></i>
                    <%= __('navigation.home') %>
                </a>
                
                <button onclick="history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i>
                    <%= __('common.back') %>
                </button>
                
                <% if (error && error.status === 404) { %>
                    <a href="<%= getLocalizedUrl('/products') %>" class="btn btn-outline-primary">
                        <i class="bi bi-grid"></i>
                        <%= __('navigation.products') %>
                    </a>
                <% } %>
            </div>
            
            <!-- Additional Help -->
            <div class="mt-5 pt-4 border-top">
                <h5 class="mb-3">Need Help?</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <a href="<%= getLocalizedUrl('/') %>" class="text-decoration-none">
                            <i class="bi bi-house-door fs-4 text-primary"></i>
                            <div class="small text-muted mt-2">Homepage</div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="<%= getLocalizedUrl('/products') %>" class="text-decoration-none">
                            <i class="bi bi-grid fs-4 text-primary"></i>
                            <div class="small text-muted mt-2">Browse Products</div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="<%= getLocalizedUrl('/help/contact') %>" class="text-decoration-none">
                            <i class="bi bi-headset fs-4 text-primary"></i>
                            <div class="small text-muted mt-2">Contact Support</div>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Error Details (Development Only) -->
            <% if (typeof error !== 'undefined' && error && process.env.NODE_ENV === 'development') { %>
                <div class="mt-5">
                    <details class="text-start">
                        <summary class="btn btn-outline-dark btn-sm">Show Error Details (Dev)</summary>
                        <div class="mt-3 p-3 bg-light border rounded">
                            <h6>Error Details:</h6>
                            <pre class="small text-muted"><%= JSON.stringify(error, null, 2) %></pre>
                            
                            <% if (error.stack) { %>
                                <h6 class="mt-3">Stack Trace:</h6>
                                <pre class="small text-danger"><%= error.stack %></pre>
                            <% } %>
                        </div>
                    </details>
                </div>
            <% } %>
        </div>
    </div>
</div>