<div class="col">
    <div class="card h-100 product-card">
        <!-- Product Image -->
        <div class="position-relative">
            <img src="<%= product.imageUrl || '/images/placeholder-product.jpg' %>" 
                 class="card-img-top" 
                 alt="<%= product.name %>"
                 style="height: 200px; object-fit: cover;">
            
            <!-- Stock Badge -->
            <% if (product.stockQuantity <= 0) { %>
                <span class="position-absolute top-0 end-0 badge bg-danger m-2">
                    <%= __('products.out_of_stock') %>
                </span>
            <% } else if (product.stockQuantity <= 10) { %>
                <span class="position-absolute top-0 end-0 badge bg-warning m-2">
                    <%= product.stockQuantity %> <%= __('products.stock') %>
                </span>
            <% } %>
            
            <!-- Quick Actions -->
            <div class="position-absolute top-0 start-0 m-2">
                <button class="btn btn-light btn-sm rounded-circle" 
                        onclick="toggleWishlist('<%= product.id %>')"
                        title="Add to wishlist">
                    <i class="bi bi-heart"></i>
                </button>
            </div>
        </div>
        
        <div class="card-body d-flex flex-column">
            <!-- Category -->
            <% if (product.category) { %>
                <small class="text-muted mb-1">
                    <i class="bi bi-tag"></i>
                    <%= product.category.name %>
                </small>
            <% } %>
            
            <!-- Product Name -->
            <h6 class="card-title">
                <a href="<%= getLocalizedUrl('/products/' + product.id) %>" 
                   class="text-decoration-none text-dark">
                    <%= product.name %>
                </a>
            </h6>
            
            <!-- Product Description -->
            <% if (product.description) { %>
                <p class="card-text text-muted small">
                    <%= product.description.length > 100 ? 
                        product.description.substring(0, 100) + '...' : 
                        product.description %>
                </p>
            <% } %>
            
            <!-- Price -->
            <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="price">
                        <span class="h5 text-primary fw-bold mb-0">
                            $<%= parseFloat(product.price).toFixed(2) %>
                        </span>
                        <% if (product.originalPrice && product.originalPrice > product.price) { %>
                            <small class="text-muted text-decoration-line-through ms-2">
                                $<%= parseFloat(product.originalPrice).toFixed(2) %>
                            </small>
                        <% } %>
                    </div>
                    
                    <!-- Rating (if available) -->
                    <% if (product.rating) { %>
                        <div class="rating">
                            <small class="text-warning">
                                <% for(let i = 1; i <= 5; i++) { %>
                                    <i class="bi bi-star<%= i <= product.rating ? '-fill' : '' %>"></i>
                                <% } %>
                            </small>
                            <small class="text-muted">(<%= product.reviewCount || 0 %>)</small>
                        </div>
                    <% } %>
                </div>
                
                <!-- Action Buttons -->
                <div class="d-grid gap-2">
                    <% if (product.stockQuantity > 0) { %>
                        <button class="btn btn-primary btn-sm" 
                                onclick="addToCart('<%= product.id %>')"
                                data-product-id="<%= product.id %>">
                            <i class="bi bi-cart-plus"></i>
                            <%= __('products.add_to_cart') %>
                        </button>
                    <% } else { %>
                        <button class="btn btn-secondary btn-sm" disabled>
                            <i class="bi bi-x-circle"></i>
                            <%= __('products.out_of_stock') %>
                        </button>
                    <% } %>
                    
                    <a href="<%= getLocalizedUrl('/products/' + product.id) %>" 
                       class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye"></i>
                        <%= __('products.view_details') %>
                    </a>
                </div>
                
                <!-- SKU -->
                <% if (product.sku) { %>
                    <small class="text-muted mt-2 d-block">
                        <%= __('product.sku') %>: <%= product.sku %>
                    </small>
                <% } %>
            </div>
        </div>
    </div>
</div>